<ul class="flex justify-center">

    {% for icon, link in site.social_links %}

    <li class="ml-4">

        <a href="{{ link | safe }}" class="block text-gray-500 hover:text-red-500" target="_blank" rel="noopener noreferrer">

            <span class="sr-only">Find me on {{ icon }}</span>

            <svg class="block" fill="currentColor" role="img" aria-hidden="true" width="24" height="24">
                <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="/images/icons/icon-library.svg#icon-{{ icon }}"></use>
            </svg>

        </a>

    </li>

    {% endfor %}

</ul>
