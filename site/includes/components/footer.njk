<footer id="footer" class="footer bg-gray-900 text-white">

    <div class="inner py-10 ">

        <div class="flex flex-col md:flex-row justify-between items-center md:items-end">
            <div class="text-center md:text-left mb-8">
                <h2 id="hours" class="mb-3 text-2xl text-white">Store Hours</h2>
                <ul class="list-none">
                    {% for hour in site.hours %}
                        <li>{{ hour }}</li>
                    {% endfor %}
                </ul>
            </div>

            <div class="flex flex-col items-center md:items-end text-xl mb-8">
                <a class="text-white hover:text-red-500" href="mailto:{{ site.contact.email }}">{{ site.contact.email }}</a>
                <a class="text-white hover:text-red-500" href="tel:{{ site.contact.phone }}">{{ site.contact.phone }}</a>
            </div>
        </div>

        <div class="flex flex-col md:flex-row justify-between items-center">
            <p class="pb-8 md:pb-0 text-gray-500">Â© 2021 {{ site.name }}</p>

            {% include 'components/social-icons.njk' %}
        </div>

    </div>

</footer>
