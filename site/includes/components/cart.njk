<li 
    class="relative py-2 mb-4 md:mr-6 md:mb-0"
    x-data="cartPopup()"
    x-init="init()"
>
    <a href="#" class="snipcart-checkout flex font-bold text-white">
        <span class="sr-only">Cart</span>
        <span class="snipcart-items-count mr-1"></span>
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" class="icon-shopping-cart h-6 w-6 mt-1 mr-1"><path class="fill-current text-red-600" d="M7 4h14a1 1 0 0 1 .9 1.45l-4 8a1 1 0 0 1-.9.55H7a1 1 0 0 1-1-1V5a1 1 0 0 1 1-1z"/><path class="fill-current text-red-700" d="M17.73 19a2 2 0 1 1-3.46 0H8.73a2 2 0 1 1-3.42-.08A3 3 0 0 1 5 13.17V4H3a1 1 0 1 1 0-2h3a1 1 0 0 1 1 1v10h11a1 1 0 0 1 0 2H6a1 1 0 0 0 0 2h12a1 1 0 0 1 0 2h-.27z"/></svg>
        <span class="snipcart-total-price"></span>
    </a>

    <div class="absolute top-0 right-0 flex flex-wrap items-center w-64 p-4 mt-10 text-xl bg-white rounded shadow-lg" x-show.transition="open" style="display: none">
        <img 
            class="flex-none w-20 h-20 object-cover mr-4" 
            :src="item.image && 'https://res.cloudinary.com/hmillerdev/image/upload/ar_1,c_crop/f_auto,q_80,w_80' + item.image" 
        />
        <div class="flex-auto leading-none">
            <div class="text-red-700 font-bold mb-2" x-text="item.name"></div>
            <div class="">
                <strong x-text="'Added ' + item.quantity"></strong>
                at
                <strong x-text="'$' + item.price"></strong>
            </div>
        </div>
        <button class="flex-none w-full py-1 px-2 mt-3 text-sm text-center leading-none font-semibold bg-red-700 hover:bg-red-600 text-white rounded transition-colors duration-200">View Cart</button>
    </div>
</li>