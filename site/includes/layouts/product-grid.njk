---
layout: page
---

<section class="py-16">
    <div class="inner flex flex-col items-center text-gray-700">
        <div class="md:grid grid-cols-3 max-w-6xl -mx-4 xl:-mx-8">
            <div class="px-4 xl:px-8 mb-8">
                {% set imgUrl = ["https://res.cloudinary.com/hmillerdev/image/upload/", image_format] | join %}
                <img
                    srcset="{{ image | sizes(imgUrl) }}" 
                    src="{{ imgUrl }}/{{ image }}"
                    alt=""
                />
            </div>
            <div class="col-span-2 px-4 md:px-8">
                <h1 class="text-5xl text-red-700">{{ title or name }}</h1>
                {{ content | safe }}
            </div>
            <hr class="col-span-3 mb-10"/>
        </div>
        <ul class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-x-16 gap-y-6 mb-16 leading-tight">
            {% for item in collections[category] %}
                <li class="group">
                    <a href="{{ item.url }}">
                        <img 
                            class="mb-2"
                            srcset="{{ item.data.image | sizes("https://res.cloudinary.com/hmillerdev/image/upload/ar_1.5,c_crop/f_auto,q_80")}}" 
                            src="https://res.cloudinary.com/hmillerdev/image/upload/ar_1.5,c_crop/f_auto,q_80{{ item.data.image }}"
                            alt=""
                        />
                        <h2 class="text-2xl text-gray-800 group-hover:text-red-700 transition-colors duration-200 mb-0">{{ item.data.name }}</h2>
                    </a>
                </li>
            {% endfor %}
        </ul>
    </div>
</div>
